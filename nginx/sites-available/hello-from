server {
    listen 80;
    server_name hello-from.arigints.my.id;
    return 301 https://$host$request_uri;
}
server {
    listen 443 ssl;
    server_name hello-from.arigints.my.id;
	
    root /var/www/html/hello-from;
    index index.html;

    location / {
        try_files $uri $uri/ =404;
    }

    ssl_certificate /etc/letsencrypt/live/arigints.my.id-0001/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/arigints.my.id-0001/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;
}
