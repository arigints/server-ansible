server {
    listen 80;
    server_name 103.150.116.131;
    
    location / {
        proxy_pass http://orca;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
upstream orca {
	server 10.30.1.213:30565;
}
server {
    listen 443 ssl;
    server_name 103.150.116.131;

    ssl_certificate /etc/letsencrypt/live/arigints.my.id-0001/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/arigints.my.id-0001/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    location / {
        proxy_pass http://orca;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
